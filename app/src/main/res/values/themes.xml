<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DumbPhone" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/persian_blue</item>
        <item name="colorPrimaryVariant">@color/persian_blue</item>
        <item name="colorOnPrimary">@color/dark_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/medium_blue</item>
        <item name="colorSecondaryVariant">@color/medium_blue</item>
        <item name="colorOnSecondary">@color/medium_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/persian_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DumbPhone.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DumbPhone.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DumbPhone.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>